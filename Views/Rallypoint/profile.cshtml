<div class="wrapper">
    <div style="text-align: center">

    <h1>@ViewBag.User[0].username</h1>
    @{
    @if(@ViewBag.User[0].imagelink == null){
        <h4>If you want a Profile Picture, please submit an image link! (Any image considered Offensive will be removed and result in a banned account.)</h4>
    }
    else{
        <img id="profilepic" src="@ViewBag.User[0].imagelink" alt="profile image">

        }   
    }

    <form action="/upload" method="Post">
        <input type="text" name="link">
        <input type="submit" value="submit">

    </form>
    <div id="stats">
       <h4 class="stuff"> Wins: @ViewBag.User[0].wins</h4>
        <h4 class="stuff"> Losses: @ViewBag.User[0].losses</h4>
        <h4 class="stuff"> Games Joined: @ViewBag.User[0].gamesjoined.Count</h4> 
        <h4 class="stuff"> Games Created: @ViewBag.User[0].gamescreated.Count</h4> 
    </div>
    
    </div>
</div>